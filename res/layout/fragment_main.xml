<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <include
        android:id="@+id/grid_view_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/round1_grid_layout" />

    <LinearLayout
        android:id="@+id/score_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:layout_below="@id/grid_view_container"
		android:orientation="horizontal" >

        <TextView
            android:id="@+id/score_heading_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="@string/heading_score"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/score_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textSize="18sp" />
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/click_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:layout_below="@id/score_container"
		android:orientation="horizontal" >

        <TextView
            android:id="@+id/click_heading_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="@string/heading_click"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/click_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textSize="18sp" />
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/miss_click_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:layout_below="@id/click_container"
		android:orientation="horizontal" >

        <TextView
            android:id="@+id/miss_click_heading_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="@string/heading_miss_click"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/miss_click_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textSize="18sp" />
    </LinearLayout>    

</RelativeLayout>